<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1BB300">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friends_dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"

        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/friends_name"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="@string/display_name_in_friends"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30sp"
        android:layout_marginRight="70sp"
        android:layout_marginLeft="80sp"
        android:textColor="#B32400"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/friends_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friends_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="71dp"
        android:text="@string/default_status_in_friends"
        android:textColor="#B32400"
        android:textSize="20sp" />

</RelativeLayout>