<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication5"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".friends"
            android:parentActivityName=".Navigatoin"></activity>
        <activity
            android:name=".chat"
            android:parentActivityName=".friends"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".profile"
            android:parentActivityName=".Navigatoin" />
        <activity
            android:name=".allusers"
            android:parentActivityName=".Navigatoin" />
        <activity
            android:name=".change_status"
            android:parentActivityName=".settings" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".settings"
            android:parentActivityName=".Navigatoin"/>
        <activity
            android:name=".Navigatoin"
            android:label="@string/title_activity_navigatoin"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>