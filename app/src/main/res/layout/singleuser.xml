<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#27B300"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_user_dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"

        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/single_user_name"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="@string/display_name_in_singleuser"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30sp"
        android:layout_marginRight="70sp"
        android:layout_marginLeft="80sp"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_user_name"
        android:text="@string/default_status_insingeuser"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30sp"
        android:id="@+id/single_user_status"/>


</RelativeLayout>